  "name": "Footer Navigation",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Select Wake Menu"
    },
    {
      "type": "link_list",
      "id": "footer_boat_menu",
      "label": "Select Boats Menu"
    }
  ],
  "blocks": [
    {
      "type": "link_item",
      "name": "Link Item",
      "settings": [
        {
          "type": "text",
          "id": "link_title",
          "label": "Link Title"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Navigation",
      "category": "Footer"
    }
  ]
}
{% endschema %}
